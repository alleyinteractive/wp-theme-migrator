{
    "name": "alleyinteractive/wp-theme-migrator",
    "description": "A WordPress plugin to migrate to a new theme incrementally.",
    "type": "library",
    "keywords": [
        "alleyinteractive",
        "wp-theme-migrator"
    ],
    "homepage": "https://github.com/alleyinteractive/wp-theme-migrator",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Alley",
            "email": "info@alley.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "alleyinteractive/composer-wordpress-autoloader": "^1.0"
    },
    "require-dev": {
        "alleyinteractive/alley-coding-standards": "^1.0",
        "mantle-framework/testkit": "^0.10",
        "nunomaduro/collision": "^5.0"
    },
    "config": {
        "allow-plugins": {
            "alleyinteractive/composer-wordpress-autoloader": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "pestphp/pest-plugin": true
        },
        "sort-packages": true
    },
    "extra": {
        "wordpress-autoloader": {
            "autoload": {
                "WP_Theme_Migrator\\": "src"
            },
            "autoload-dev": {
                "WP_Theme_Migrator\\Tests\\": "tests"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "phpcbf": "phpcbf .",
        "phpcs": "phpcs .",
        "phpunit": "phpunit",
        "test": [
            "@phpcs",
            "@phpunit"
        ]
    }
}
